<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:LazyChat.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="180"
        x:Class="LazyChat.Views.InputDialog"
        x:DataType="vm:InputDialogViewModel"
        Title="{Binding Title}"
        Width="400" Height="180"
        CanResize="False"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:InputDialogViewModel/>
    </Design.DataContext>

    <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="{Binding Prompt}" TextWrapping="Wrap"/>
        
        <TextBox Text="{Binding InputText}" Watermark="请输入..."/>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10">
            <Button Content="确定" 
                    Command="{Binding OkCommand}"
                    MinWidth="80" 
                    IsDefault="True"/>
            <Button Content="取消" 
                    Command="{Binding CancelCommand}"
                    MinWidth="80" 
                    IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
