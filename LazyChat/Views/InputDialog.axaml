<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:LazyChat.ViewModels"
        mc:Ignorable="d" d:DesignWidth="420" d:DesignHeight="220"
        x:Class="LazyChat.Views.InputDialog"
        x:DataType="vm:InputDialogViewModel"
        Title="{Binding Title}"
        Width="420" Height="220"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="#FAFBFC">

    <Design.DataContext>
        <vm:InputDialogViewModel/>
    </Design.DataContext>

    <Border Padding="28">
        <StackPanel Spacing="20">
            <!-- Prompt -->
            <TextBlock Text="{Binding Prompt}" 
                       TextWrapping="Wrap"
                       FontSize="15"
                       Foreground="#1D1D1F"/>
            
            <!-- Input -->
            <TextBox Text="{Binding InputText}" 
                     Watermark="请输入..."
                     Classes="modern"
                     FontSize="15"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Spacing="12"
                        Margin="0,8,0,0">
                <Button Content="取消" 
                        Command="{Binding CancelCommand}"
                        Classes="secondary"
                        MinWidth="90" 
                        IsCancel="True"/>
                <Button Content="确定" 
                        Command="{Binding OkCommand}"
                        Classes="primary"
                        MinWidth="90" 
                        IsDefault="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
