<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:LazyChat.ViewModels"
        mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="280"
        x:Class="LazyChat.Views.FileTransferWindow"
        x:DataType="vm:FileTransferViewModel"
        Title="æ–‡ä»¶ä¼ è¾“"
        Width="480" Height="280"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="#FAFBFC">

    <Design.DataContext>
        <vm:FileTransferViewModel/>
    </Design.DataContext>

    <Border Padding="28">
        <StackPanel Spacing="20">
            <!-- Header with icon -->
            <StackPanel Orientation="Horizontal" Spacing="16">
                <Border Width="56" Height="56"
                        CornerRadius="12"
                        Background="#F0F5FF">
                    <TextBlock Text="ðŸ“„"
                               FontSize="28"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="{Binding FileNameText}" 
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#1D1D1F"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="340"/>
                    <TextBlock Text="{Binding FileSizeText}"
                               FontSize="13"
                               Foreground="#86868B"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Info text -->
            <TextBlock Text="{Binding InfoText}" 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       Foreground="#1D1D1F"/>

            <!-- Progress Section -->
            <StackPanel Spacing="8" IsVisible="{Binding ShowProgress}">
                <ProgressBar Value="{Binding Progress}" 
                             Height="8"
                             CornerRadius="4"
                             Background="#E5E5EA"
                             Foreground="#0A84FF"/>
                <TextBlock Text="{Binding ProgressText}" 
                           FontSize="13"
                           Foreground="#86868B"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Spacing="12"
                        Margin="0,8,0,0">
                <Button Content="æ‹’ç»" 
                        Command="{Binding RejectCommand}"
                        IsVisible="{Binding ShowAcceptReject}"
                        Classes="secondary"
                        MinWidth="110"/>
                <Button Content="æŽ¥å—" 
                        Command="{Binding AcceptCommand}"
                        IsVisible="{Binding ShowAcceptReject}"
                        Classes="primary"
                        MinWidth="110"/>
                <Button Content="å…³é—­" 
                        Command="{Binding CloseCommand}"
                        IsVisible="{Binding ShowClose}"
                        Classes="secondary"
                        MinWidth="110"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
