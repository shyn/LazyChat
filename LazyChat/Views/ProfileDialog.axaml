                                   Width="80"/>
                        <TextBlock x:Name="IpAddressText"
                                   Grid.Column="1"
                                   FontSize="14"
                                   Foreground="#1D1D1F"/>
                    </Grid>
                    
                    <Border Height="1" Background="#E5E5EA"/>
                    
                    <!-- Port -->
                    <Grid ColumnDefinitions="Auto,*">
                        <TextBlock Grid.Column="0"
                                   Text="ç«¯å£"
