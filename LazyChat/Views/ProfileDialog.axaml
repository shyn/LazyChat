    <Border Padding="28">
        <StackPanel Spacing="20">
            <!-- Avatar and Name -->
            <StackPanel HorizontalAlignment="Center" Spacing="12">
                <Border x:Name="AvatarBorder"
                        Width="80" Height="80"
                        CornerRadius="40"
                        HorizontalAlignment="Center">
                    <TextBlock x:Name="AvatarInitial"
