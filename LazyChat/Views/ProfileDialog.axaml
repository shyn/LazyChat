                           FontWeight="Bold"
                           Foreground="#1D1D1F"
                           HorizontalAlignment="Center"/>
                <Border x:Name="StatusBadge"
                        CornerRadius="10"
                        Padding="12,4"
                        HorizontalAlignment="Center">
                    <TextBlock x:Name="StatusText"
                               FontSize="12"
                               FontWeight="Medium"/>
                </Border>
            </StackPanel>
            
            <!-- Info Cards -->
            <Border Background="#FFFFFF"
                    CornerRadius="12"
                    Padding="16"
                    BorderBrush="#E5E5EA"
                    BorderThickness="1">
                <StackPanel Spacing="12">
                    <!-- Peer ID -->
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="ID"
                                   FontSize="14"
                                   Foreground="#86868B"
                                   Width="80"/>
